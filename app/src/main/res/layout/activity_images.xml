    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="10dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal">

        <Button
